<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <!-- <link rel="stylesheet" href="/stylesheets/home.css"> -->
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
    <div class="container">
        <h1><%= blog.title %></h1>
        <button><a href="/blog/edit/<%=blog._id%>">Edit Blog</a></button>
    </div>
    <img src="<%= blog.coverImageURL %>" alt="cover Image" width="500px">
    <pre class="mt-3"><%= blog.content %></pre>;
    </div>
    <div class="container mt-4 p-4">
        <div class="profile">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px">
        <span><%= blog.createdBy.fullName %></span>
        </div>
        <!-- like -->
        <form action="/blog/like/<%= blog._id %>" method="post">
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                <button type="submit"><i class="ri-thumb-up-line"></i></button>
                <h3><%= blog.likes.length %></h3>
              </div>
        </form>
        <form action="/blog/disLike/<%= blog._id %>" method="post">
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                <button type="submit"><i class="ri-thumb-down-line"></i></button>
                <h3><%= blog.dislikes.length %></h3>
              </div>
        </form>
    </div>
    <% if (locals.user) { %>
        <div class="container mt-4 p-4">
           <div>
            <h3>Comments (<%= comments.length %>)</h3>
            <form action="/blog/delete/<%= blog._id %>" method="post">
                <button class="deleteBtn">Delete Blog</button>
            </form>
           </div>
            <br>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" id="comment" aria-describedby="comment" placeholder="Drop your Comments here...">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div class="container">
               <% comments.forEach(comment => { %>
                <div class="container mt-2 p-2">
                    <img src="<%= comment.createdBy.profileImageURL %>" width="50px">
                    <span><%= comment.createdBy.fullName %></span>
                    <pre><%=comment.content %></pre>
                </div>
               <% }) %>
            </div>
        </div>
    <% }else{ %>
        <div class="container mt-4 p-4">
            <h3>Comments (<%= comments.length %>)</h3>
            <br>
            <form action="/user/signin" method="get">
                <div class="mb-3">
                    <input type="text" class="form-control" id="comment" aria-describedby="comment" placeholder="Drop your Comments here...">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div class="container">
                <% comments.forEach(comment => { %>
                 <div class="container mt-2 p-2">
                     <img src="<%= comment.createdBy.profileImageURL %>" width="50px">
                     <span><%= comment.createdBy.fullName %></span>
                     <pre><%=comment.content %></pre>
                 </div>
                <% }) %>
             </div>
        </div>
        <% } %>
    <%- include('./partials/script') %>
</body>
</html>